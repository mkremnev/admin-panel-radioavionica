{
  "name": "radioavionica/admin-panel",
  "description": "Project React+Slim",
  "type": "project",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "php-di/php-di": "^6.3",
    "slim/psr7": "^1.2",
    "slim/slim": "^4.5",
    "symfony/console": "^5.1"
  },
  "require-dev": {
    "overtrue/phplint": "^2.2",
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "*",
    "vimeo/psalm": "^4.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "license": "GPL",
  "authors": [
    {
      "name": "Maxim Kremnev",
      "email": "m.kremnev@netlinux.ru"
    }
  ],
  "scripts": {
    "lint": "phplint",
    "check": "phpcs",
    "fix": "phpcbf",
    "test": "phpunit --color=always",
    "test-coverage": "phpunit --color=always --coverage-html var/coverage",
    "psalm": "psalm",
    "app": "php bin/app.php --ansi"
  }
}
